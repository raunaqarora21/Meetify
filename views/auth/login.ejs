<div class="container py-5" 
    style="display: flex; justify-content: center; flex-direction: column; align-items: center;">
    
    <h3 class="text-center mb-3" style= "color:#6264a7; font-size: 38px;">LOGIN MICROSOFT TEAMS</h3>
    <!--Image -->
    <div class="card" style="width:100%; max-width: 35rem;">
        <div class="card" style="box-shadow: 0 0 5px #b8b8b8;">
            <div class="card-body-image">
                <img src="/images/bg.jpg" width="100%" class="rounded" alt="">
        </div>
        <div style="display: flex; justify-content: space-between; align-items: center; background-color:#6264a7; color:whitesmoke" class="card-header">
            <p class="m-0">LOGIN</p><a href="/" type="button" class="btn btn-outline-success">Sign Up</a>
        </div>
        <div class="card-body">
            <form action="/login" method="POST">
                <% if(locals.messages.success){ %>
                    <div class="alert alert-success" role="alert">
                        <%= locals.messages.success %>
                    </div>
                    <% } %>
                        <% if(locals.messages.error){ %>
                            <div class="alert alert-danger" role="alert">
                                <%= locals.messages.error %>
                            </div>
                            <% } %>
                                <div class="mb-3">
                                    <label class="form-label">Username</label>
                                    <div class="input-group">
                                        <div class="input-group-text">
                                            <ion-icon name="person-circle-outline"></ion-icon>
                                        </div>
                                        <input name="username" type="text" class="form-control" placeholder="Username">
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Password</label>
                                    <div class="input-group">
                                        <div class="input-group-text">
                                            <ion-icon name="lock-closed-outline"></ion-icon>
                                        </div>
                                        <input name="password" type="password" class="form-control"
                                            placeholder="Password">
                                    </div>
                                </div>
                                <button style="width: 100%; background-color: #6264a7;" type="submit" class="btn btn-primary">Login</button>
            </form>
        </div>
        <!--Styling effects-->
        <style>
            .card-body-image{
                height: 250px;
                width: 250px;
                margin-left: auto;
                margin-right: auto;
                display: block;
            }
            .btn-outline-success{
                     color:whitesmoke;
                     border: #6264a7;
                     
            }
            .btn-outline-success:hover{
                     color:#6264a7;
                     background-color: whitesmoke;
                     border: whitesmoke;
                  
                     
            }
            body {
                background-image: linear-gradient(rgba(255, 255, 255, 0.596), rgba(255, 255, 255, 0.4)), url("https://images.unsplash.com/photo-1511649475669-e288648b2339?ixid=MnwxMjA3fDB8MHxzZWFyY2h8MjF8fG9mZmljZSUyMGJhY2tncm91bmR8ZW58MHx8MHx8&ixlib=rb-1.2.1&w=1000&q=80");
                background-repeat: no-repeat;
                width: 100%;
                height: 100%;
                background-size: cover;
               
            }
        </style>
    </div>
</div>